<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="using:TRABAJO_GRUPAL_AVALONIA.Core"
        x:Class="TRABAJO_GRUPAL_AVALONIA.View.AddBookingWindow">
    <Grid ColumnDefinitions="Auto, Auto">
        <StackPanel Grid.Column="0" Margin="20" Spacing="10">
            <TextBlock Text="Gestión de Reservas" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Datos de la reserva" FontSize="18" Margin="0,0,0,10"/>

            <TextBlock Text="Cliente (DNI):"/>
            <ComboBox Name="CboCliente" HorizontalAlignment="Stretch" PlaceholderText="Selecciona un cliente">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="core:Cliente">
                        <TextBlock Text="{Binding DNI}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Habitación:"/>
            <ComboBox Name="CboHabitacion" HorizontalAlignment="Stretch" PlaceholderText="Selecciona una habitación">
                 <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="core:Habitacion">
                        <TextBlock Text="{Binding Numero}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Fecha Entrada:"/>
            <DatePicker Name="DpEntrada" HorizontalAlignment="Stretch"/>

            <TextBlock Text="Fecha Salida:"/>
            <DatePicker Name="DpSalida" HorizontalAlignment="Stretch"/>

            <CheckBox Name="ChkGaraje" Content="Plaza de Garaje"/>

            <TextBlock Text="Importe por día (€):"/>
            <TextBox Name="TxtImporte"/>

            <TextBlock Text="IVA (%):"/>
            <TextBox Name="TxtIVA" Text="21"/>

            <TextBlock Name="TxtError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                <Button Name="BtnGuardar" Content="Guardar" Background="LightGray"/>
                <Button Name="BtnNuevo" Content="Nueva / Limpiar"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20" Spacing="10">
            <TextBlock Text="Reservas Registradas" FontSize="20" FontWeight="Bold"/>
            <ListBox Name="LstReservas" Height="450">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="core:Reserva">
                        <StackPanel>
                            <TextBlock Text="{Binding IdReserva, StringFormat='ID: {0}'}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding NombreCliente, StringFormat='Cliente: {0}'}" FontSize="12"/>
                            <TextBlock Text="{Binding NumeroHabitacion, StringFormat='Hab: {0}'}" FontSize="12"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Name="BtnEditar" Content="Editar Seleccionada"/>
                <Button Name="BtnEliminar" Content="Eliminar Seleccionada" Background="#FFCCCC"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>