<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TRABAJO_GRUPAL_AVALONIA.View.MainWindow"
        Title="HOTEL">

    <Grid RowDefinitions="Auto, *">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5" Margin="10">
            <Button Name="BtnClientes" Content="Clientes"/>
            <Button Name="BtnHabitaciones" Content="Habitaciones"/>
            <Button Name="BtnReservas" Content="Reservas"/>
            <Button Name="BtnBusquedas" Content="Búsquedas"/>
            <Button Name="BtnGraficos" Content="Estadísticas"/>
            <Button Name="BtnSalir" Content="Salir"/>
        </StackPanel>

        <Border Grid.Row="1" Name="MainContent" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <TextBlock Text="Bienvenido al Sistema de Gestión Hotelera" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Border>
    </Grid>
</Window>